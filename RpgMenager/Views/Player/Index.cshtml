@model IEnumerable<RpgMenager.Application.DtosAnd.Player.PlayerDto>

@{
    ViewData["Title"] = "Index";
    int Counter = 1;
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>
<table class="table table-striped  table-bordered ">
    <thead class="table-light">
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RealFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RealLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody class="table-info">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Counter
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RealFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RealLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Player" asp-route-encodedName="@item.EncodedName" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-controller="Player" asp-route-encodedName="@item.EncodedName" class="btn btn-primary">Details</a>
                    <form asp-action="Delete" asp-controller="Player" method="post" style="display:inline;">
                        <input type="hidden" name="encodedName" value="@item.EncodedName" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Czy na pewno chcesz usunąć?');">Usuń</button>
                    </form>

                </td>
            </tr>
            Counter++;
}
    </tbody>
</table>
